<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_img" >

    <include
        android:id="@+id/include"
        android:layout_alignParentTop="true"
        layout="@layout/title_bar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/include" >

        <Button
            android:id="@+id/btn_create_picture"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/toolbar_bg"
            android:text="@string/share"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:background="@color/mask"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/img_create_picture"
                    android:layout_width="90dp"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="5dp"
                    android:padding="5dp" />

                <EditText
                    android:id="@+id/et_create_picture"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="5dp"
                    android:background="@color/transparent"
                    android:gravity="left|top"
                    android:hint="@string/add_picture_description"
                    android:padding="5dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/dw"
                    android:textSize="13sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#bbb2c3" />

            <LinearLayout
                android:id="@+id/ll_create_picture_address"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/position" />

                <TextView
                    android:id="@+id/tv_create_picture_address"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/transparent"
                    android:gravity="center_vertical"
                    android:hint="@string/name_this_location"
                    android:text=""
                    android:textColor="@color/white"
                    android:textColorHint="@color/dw"
                    android:textSize="13sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#bbb2c3" />

            <LinearLayout
                android:id="@+id/ll_create_picture_event"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/event" />

                <TextView
                    android:id="@+id/tv_create_picture_event"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/transparent"
                    android:gravity="center_vertical"
                    android:hint="@string/chose_event"
                    android:text=""
                    android:textColor="@color/white"
                    android:textColorHint="@color/dw"
                    android:textSize="13sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#bbb2c3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:id="@+id/shareLayout1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:padding="15dp" >

                        <ImageView
                            android:id="@+id/sinaImage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_sina" />

                        <TextView
                            android:id="@+id/TextView1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/sinaImage"
                            android:gravity="center_vertical"
                            android:text="@string/sina"
                            android:textColor="@color/dw" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/shareLayout3"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:padding="15dp" >

                        <ImageView
                            android:id="@+id/tencentImage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_tencent" />

                        <TextView
                            android:id="@+id/TextView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/tencentImage"
                            android:gravity="center_vertical"
                            android:text="@string/tencent"
                            android:textColor="@color/dw" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:id="@+id/shareLayout2"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:padding="15dp" >

                        <ImageView
                            android:id="@+id/renrenImage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_renren" />

                        <TextView
                            android:id="@+id/TextView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/renrenImage"
                            android:gravity="center_vertical"
                            android:text="@string/renren"
                            android:textColor="@color/dw" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/shareLayout4"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:padding="15dp" >

                        <ImageView
                            android:id="@+id/doubanImage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_douban" />

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/doubanImage"
                            android:gravity="center_vertical"
                            android:text="@string/douban"
                            android:textColor="@color/dw" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>